  void Gsmanager::wls()
  {
    Tracer_Plus trace("Gsmanager::wls");

    const Matrix& dm = design.getdm();
    Matrix pinvdm = (dm.t()*dm).i();
    Matrix pinvdmdm = pinvdm*dm.t();

    for(int x = 0; x < xsize; x++)
      for(int y = 0; y < ysize; y++)
	for(int z = 0; z < zsize; z++)
	  {
	    if(mask(x,y,z))
	      {
		ColumnVector Y = copedata.voxelts(x,y,z);
		gamma_mean.setvoxelts(pinvdmdm*Y,x,y,z);
		ColumnVector r = Y-dm*gamma_mean.voxelts(x,y,z);
		float r2 = (r.t()*r).AsScalar();

		// gamS is covariance
		Matrix gamS = (pinvdm*r2/(ntpts-1));
		ColumnVector gamS2;
		reshape(gamS2, gamS, nevs*nevs, 1);

		gamma_S.setvoxelts(gamS2,x,y,z);

		float betamean = 1.0/(Max(0.01,(r2/(ntpts-1)-mean(varcopedata.voxelts(x,y,z)).AsScalar())));
		float betavar = abs(betamean)*2;
		
		for(int g = 0; g < ngs; g++)
		  {
		    beta_b(x,y,z,g) = Sqr(betamean)/betavar;
		    beta_c(x,y,z,g) = betamean/betavar;
		  }

		m_mean.setvoxelts(dm*gamma_mean.voxelts(x,y,z),x,y,z);
		ColumnVector tmp(ntpts);
		tmp = 1/betavar;
		m_var.setvoxelts(tmp,x,y,z);		    

// 		OUT(beta_b.voxelts(x,y,z));
// 		OUT(beta_c.voxelts(x,y,z));
// 		OUT(m_mean.voxelts(x,y,z));
// 		OUT(m_var.voxelts(x,y,z));
// 		OUT(gamma_mean.voxelts(x,y,z));
// 		OUT(gamma_S.voxelts(x,y,z));
	      }
	  }    
  }
  
  void Gsmanager::variational_bayes()
  {
    Tracer_Plus trace("Gsmanager::variational_bayes");
    
    const Matrix& dm = design.getdm();

    ColumnVector Y(ntpts+nevs);
    ColumnVector m(ntpts+nevs);
    SymmetricMatrix Rinv(ntpts+nevs);
    SymmetricMatrix R(ntpts+nevs);
    DiagonalMatrix Q(ntpts+nevs);		
    SymmetricMatrix S(ntpts+nevs);    
    Y = 0;
    m = 0;
    Rinv = 0;
    R = 0;
    Q = 0;
    S = 0;

    cout << "Variational Bayes" << endl;
    cout << "Number of voxels=" << nmaskvoxels << endl;
    int vox = 0;
    int voxout = 0;
    for(int x = 0; x < xsize; x++){
      for(int y = 0; y < ysize; y++)
	for(int z = 0; z < zsize; z++)
	  {
	    if(mask(x,y,z))
	      {
		vox++;		
		
		if(vox > voxout*nmaskvoxels/100.0)
		  {
		    cout<<(voxout+1)<<'%' <<'\r';		
		    cout.flush();
		    voxout++;
		  }

		Y.Rows(1,ntpts) = copedata.voxelts(x,y,z);
		//		m = m_mean & gam_mean;
		      
		// Setup S
		for(int t = 1; t <= ntpts; t++)
		  {
		    S(t,t) = 1/varcopedata(x,y,z,t-1);
		    
		    for(int e = 1; e <= nevs; e++)
		      {
			S(t,ntpts+e) = -dm(t,e)/varcopedata(x,y,z,t-1);
		      }
		  }
	
		SymmetricMatrix sumovert(nevs);
		sumovert = 0.0;
		for(int t = 1; t <= ntpts; t++)
		  {
		    SymmetricMatrix temp;
		    temp << dm.Row(t).t()*dm.Row(t)/varcopedata(x,y,z,t-1);
		    sumovert += temp;
		  }		    
		S.SymSubMatrix(ntpts+1,ntpts+nevs) << sumovert;
		

		for(int i =1; i <= 40; i++)
		  {		    		    
		    // Update m and gamma
		    for(int t = 1; t <= ntpts; t++)
		      {
			Q(t,t) = beta_b(x,y,z,design.getgroup(t)-1)/beta_c(x,y,z,design.getgroup(t)-1);
		      }
		    R = S+Q;
		    Rinv = R.i();
		    m = Rinv*Q*Y;

// 		    OUT(Q);
// 		    OUT(m);
		    // Update beta
		    for(int g = 1; g <= ngs; g++)
		      {
			float sumovert = 0; 
			for(int t = 1; t <= ntpts; t++)
			  {
			    if(design.getgroup(t)==g)
			      {			    
				sumovert += Sqr(m(t)-Y(t)) + Rinv(t,t);
			      }
			  } 
			beta_b(x,y,z,g-1) = 1e-6+0.5*design.getntptsingroup(g);
			beta_c(x,y,z,g-1) = 1e-6+0.5*sumovert;

// 			OUT(beta_b(x,y,z,g-1));
// 			OUT(beta_c(x,y,z,g-1));
		      }

		  }
		
		m_mean.setvoxelts(m.Rows(1,ntpts),x,y,z);
		gamma_mean.setvoxelts(m.Rows(ntpts+1,ntpts+nevs),x,y,z);

		Matrix gamS = Rinv.SymSubMatrix(ntpts+1,ntpts+nevs); //gamS is COVARIANCE of gam
		ColumnVector gamS2;
		reshape(gamS2, gamS, nevs*nevs, 1);	
		gamma_S.setvoxelts(gamS2,x,y,z); /// gamma_S stores the covariace 
		//		OUT(R);
		//		OUT(Rinv);
		Matrix cov_m = Rinv.SymSubMatrix(1,ntpts);		// the covariance of m
		m_var.setvoxelts(diag(cov_m),x,y,z);  
	
// 		OUT(beta_b.voxelts(x,y,z));
// 		OUT(beta_c.voxelts(x,y,z));
// 		OUT(m_mean.voxelts(x,y,z));
// 		OUT(m_var.voxelts(x,y,z));
		// 		OUT(gamma_mean.voxelts(x,y,z).t());
 		//OUT(gamma_S.voxelts(x,y,z).t());

		if(GsOptions::getInstance().vbzthreshold.value() > 0)
		  {
		    zmask(x,y,z) = is_interesting_voxel(gamma_mean.voxelts(x,y,z),gamS,GsOptions::getInstance().vbzthreshold.value());		    
		  }
	      }
	  }
    }    

    nmaskvoxels = int(zmask.sum());

    cout << endl;
  }
  
  bool Gsmanager::is_interesting_voxel(const ColumnVector& gammean, const Matrix& gamS, float zthresh)
  {
    Tracer_Plus trace("Gsmanager::is_interesting_voxel");

    bool largez = false;
    
    for(int t = 0; !largez && t < design.getnumtcontrasts(); t++)
      {
	RowVector tcon = design.gettcontrast(t+1);
	largez = (z_t_contrast(gammean,gamS,tcon) > zthresh);
      }
    for(int f = 0; !largez && f < design.getnumfcontrasts(); f++)
      {
	largez = (z_f_contrast(gammean,gamS,design.getfcontrast(f+1)) > zthresh);
      }
    
    return largez;
  }

  float Gsmanager::z_t_contrast(const ColumnVector& gammean, const Matrix& gamS, const RowVector& tcontrast)
  {
    Tracer_Plus trace("Gsmanager::z_t_contrast");

    float sqrtcov = sqrt(tcontrast*gamS*tcontrast.t()).AsScalar();
    return (tcontrast*gammean/sqrtcov).AsScalar();
  }

  float Gsmanager::z_f_contrast(const ColumnVector& gammean, const Matrix& gamS, const Matrix& fcontrast)
  {
    Tracer_Plus trace("Gsmanager::z_f_contrast");

    float dof1 = float(fcontrast.Nrows());
    float dof2 = 1000.0;

    float f = (gammean.t()*fcontrast*gamS.i()*fcontrast.t()*gammean/dof1).AsScalar();

    return F2z::getInstance().convert(f,dof1,dof2);
  }
 

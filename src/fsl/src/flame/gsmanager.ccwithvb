  float Gsmanager::mdofls(const ColumnVector& xsq, const float phi, const int P) const
  {    
    Tracer_Plus trace("Gsmanager::mdofls");

    ColumnVector xsqscaled = xsq/phi;

    float vbig=1000;
    float vmid=50;
    float vsm=0.1;
    float fbig=mgradpt(vbig,xsqscaled,P);
    float fmid=mgradpt(vmid,xsqscaled,P);
    float fsm=mgradpt(vsm,xsqscaled,P);

    while((vbig-vmid)>0.5 && (vmid-vsm)>0.5)
      {  
	if(sign(fsm)!=sign(fmid))
	  {
	    vbig=vmid;
	    fbig=fmid;
	    vmid=(vmid+vsm)/2.0;
	    fmid=mgradpt(vmid,xsqscaled,P);
	  }
	else if(sign(fmid)!=sign(fbig))
	  {
	    vsm=vmid;
	    fsm=fmid;
	    vmid=(vbig+vmid)/2.0;
	    fmid=mgradpt(vmid,xsqscaled,P);
	  }
	else
	  {
	    vsm=100;
	    vmid=100;
	    vbig=100;
	  }
      }

    return round(vmid);
  }

  float Gsmanager::mgradpt(const float v, const ColumnVector& xsq, const int P) const
  {
    Tracer_Plus trace("Gsmanager::mgradpt");

    int n = xsq.Nrows();

    float sumoveri = 0.0;

    for(int i=1; i<=n; i++)
      {
	sumoveri += (v+P)*(xsq(i)/Sqr(v))/(2*(1+xsq(i)/v)) - 0.5*log(1+xsq(i)/v);
      }
    
    return -(n*(0.5*digamma((v+P)/2.0) - 0.5*P/v - 0.5*digamma(v/2.0)) + sumoveri);	     

  }

  float Gsmanager::csevl(const float x, const ColumnVector& cs, const int n) const
  {
    Tracer_Plus trace("Gsmanager::csevl");

    float b0 = 0;
    float b1 = 0;
    float b2 = 0;
    const float twox=2*x;
    
    for(int i=1; i<=n; i++)
      {
	b2=b1;
	b1=b0;
	b0=twox*b1-b2+cs(n+1-i);
      }
    
    return 0.5*(b0-b2);
  }

  float Gsmanager::digamma(const float x) const
  { 
    Tracer_Plus trace("Gsmanager::digamma");

    float y = fabs(x);
    float psi;

    if(y<2.0)
      {
	// do we need to deal with the following case?
	// c psi(x) for -2. .lt. x .lt. 2.

	int n = int(floor(x));
	y = x - n;
	n = n - 1;
	psi = csevl(2*y-1, psics, ntpsi);
	if(n==-1)
	  {
	    psi = psi - 1.0/x;
	  }
      }
    else
      {
	const float aux = csevl(8/(Sqr(y))-1, apsics, ntapsi);
	psi = log(x) - 0.5/x + aux;
      }
    
    return psi;
  }

  void Gsmanager::multitfit(const Matrix& x, ColumnVector& m, SymmetricMatrix& covar, float& v) const
  {
    Tracer_Plus trace("Gsmanager::multitfit");

    int n = x.Ncols();
    int P = x.Nrows();

    v = 10;

    Matrix mx;
    Matrix mn;
    remmean(x,mx,mn,2);
    m = mn.t().AsColumn();

    covar = cov(mx.t());
    float tmp = pow(covar.Determinant(),(1.0/P));    

    covar=covar/tmp;

    // xsq(i) = x(i)'*inv(c)*x(i)
    ColumnVector xsq(n);
    SymmetricMatrix invcovar = covar.i();
    
    for(int i = 1; i <= n; i++)
      {
	xsq(i) = (mx.Column(i).t()*invcovar*mx.Column(i)).AsScalar();
      }

    float phi = tmp;

    for(int i = 1; i <= 20; i++)
      {
	float newphi = 0.0;
	for(int j = 1; j <= n; j++)
	  {
	    float tau = phi*(v+P)/(v*phi+xsq(j));
	    newphi += tau*xsq(j);
	  }
	phi = newphi/float(n*P);

// 	write_ascii_matrix(xsq,'xsq');
// 	OUT(P);
// 	OUT(phi);
	v = mdofls(xsq,phi,P);
//	OUT(v);
      } 

    covar = covar*phi;
  }

  float Gsmanager::logtpdf(const float& v, const ColumnVector& x2, const float& phi) const
  {
    int n = x2.Nrows();

    float sumoverj = 0.0;

    for(int j = 1; j <= n; j++)
      {
	sumoverj += log(1+(x2(j)/phi)/float(v));
      }

    return n*lgam((v+1)/2.0) - n*lgam(v/2.0) - ((v+1)/2.0)*sumoverj - n*0.5*log(M_PI*v);
  }

  void Gsmanager::setup()
  {
    Tracer_Plus trace("Gsmanager::setup");
    
    if(GsOptions::getInstance().debuglevel.value()==2)
      {
	cout << "******************************************" << endl
	     << "SETUP" << endl << "******************************************"
	     << endl;
      }

    // read data
    read_volume4D(copedata, opts.copefile.value());
    read_volume4D(varcopedata, opts.varcopefile.value());
    read_volume(mask, opts.maskfile.value());
    if(GsOptions::getInstance().debuglevel.value()==2)
      {
	cout << "******************************************" << endl
	     << "Data Read Complete" << endl << "******************************************"
	     << endl;
      }

    zmask = mask;
    zmask.threshold(1e-16);
    nmaskvoxels = int(zmask.sum());

    // setup design
    design.setup();
    cout<<"Setup Complete"<<endl;
    
    // check design and data compatability
    if(design.getntpts() != copedata.tsize())
      {	
	cout << "design.getntpts()=" << design.getntpts() << endl;
	cout << "copedata.tsize()=" << copedata.tsize() << endl;
	throw Exception("Cope data and design have different numbers of time points");
      }
    if(design.getntpts() != varcopedata.tsize())
      {	
	cout << "dm.ntpts()=" << design.getntpts() << endl;
	cout << "copedata.tsize()=" << varcopedata.tsize() << endl;
	
	throw Exception("Varcope data and design have different numbers of time points");
      }
    
    ngs = design.getngs();
    nevs = design.getnevs();
    ntpts = design.getntpts();
    xsize = copedata.xsize();
    ysize = copedata.ysize();
    zsize = copedata.zsize();
    
    cout << "nevs=" << nevs << endl;
    cout << "ntpts=" << ntpts << endl;
    cout << "ngs=" << ngs << endl;
    initialise();

  }

  void Gsmanager::initialise()
  {
    Tracer_Plus trace("Gsmanager::initialise");

    gamma_mean.reinitialize(xsize,ysize,zsize,nevs);
    gamma_S.reinitialize(xsize,ysize,zsize,nevs*nevs);
    gamma_v.reinitialize(xsize,ysize,zsize);
    beta_b.reinitialize(xsize,ysize,zsize,ngs);
    beta_c.reinitialize(xsize,ysize,zsize,ngs);
    m_mean.reinitialize(xsize,ysize,zsize,ntpts);
    m_var.reinitialize(xsize,ysize,zsize,ntpts);

    beta_mean.reinitialize(xsize,ysize,zsize,ngs);

    gamma_mean = 0;
    gamma_S = 0;   
    gamma_v = 1000;   
    beta_b = 0;
    beta_c = 0;
    m_mean = 0;
    m_var = 0;
    beta_mean = 0;

    wls();
    variational_bayes();
    
    if(GsOptions::getInstance().verbose.value())
      {
	save_volume4D(gamma_mean, LogSingleton::getInstance().appendDir("vb_gamma_mean"));
	save_volume4D(gamma_S, LogSingleton::getInstance().appendDir("vb_gamma_S"));
      }
  } 

